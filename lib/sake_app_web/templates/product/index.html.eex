<section>
  <h1>Sake App Admin</h1>
  <table>
    <%= for product <- @products do %>
       <tr>
	 <td><%= product.name %></td>
	 <td><%= product.name_kanji %></td>
	 <td><%= product.brand %></td>
	 <td><%= product.brand_kanji %></td>
	 <td><%= link "View", to: Routes.product_path(@conn, :show, product.id) %></td>
	 <td><%= link "Edit", to: Routes.product_path(@conn, :edit, product.id) %></td>
       </tr>
    <% end %>
  </table>
  <div>
    <%= link "Add Product", to: Routes.product_path(@conn, :new) %>
  </div>
</section>
